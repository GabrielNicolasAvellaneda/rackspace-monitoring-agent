#!/usr/bin/env python

import sys
import base.configure

bundle_list_files = ["bundle.list.in"]

if sys.platform == "win32":
    bundle_list_files.append("bundle.list.win.in")


def make_bundle_list(outfilename, infilenames):
    with open(outfilename, 'w') as outfile:
        for fname in infilenames:
            with open(fname) as infile:
                outfile.write(infile.read())

if __name__ == "__main__":
    #base.configure.submodule_update_init()
    make_bundle_list("bundle.list", bundle_list_files)
    base.configure.main(bundle_list_file="bundle.list")
